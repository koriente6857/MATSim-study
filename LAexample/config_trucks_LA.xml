<?xml version="1.0" ?>
<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v2.dtd">
<config>
    <module name="ev">
        <param name="auxDischargeTimeStep" value="5"/>
        <param name="chargeTimeStep" value="5"/>
        <param name="chargersFile" value="chargers.xml"/>
        <param name="analysisOutputs" value="TimeProfiles"/>
	</module>

	<module name="vehicles">
        <param name="vehiclesFile" value="evehicles_trucks.xml"/>
    </module>

    <module name="global">
        <param name="randomSeed" value="4711"/>
        <param name="coordinateSystem" value="EPSG:32611"/>
    </module>

    <module name="network">
        <!-- A network with a focus on long distances-->
        <param name="inputNetworkFile" value="network3.xml"/>
    </module>

    <module name="plans">
        <param name="inputPlansFile" value="population_LA.xml"/>
    </module>

    <module name="controller">
        <param name="outputDirectory" value="./output/evTruckExample"/>
        <param name="firstIteration" value="0"/>
        <param name="lastIteration" value="50"/>
        <param name="eventsFileFormat" value="xml"/>
        <param name="mobsim" value="qsim"/>
    </module>

    <module name="qsim">
        <!-- "start/endTime" of MobSim (00:00:00 == take earliest activity time/ run as long as active vehicles exist) -->
        <param name="startTime" value="00:00:00"/>
        <param name="endTime" value="100:00:00"/>
        <param name="simStarttimeInterpretation" value="onlyUseStarttime"/>
		<param name="mainMode" value="truck"/>
		<param name="vehiclesSource" value="fromVehiclesData"/>
    </module>

    <module name="scoring">
		<param name="learningRate" value="1.0"/>
		<param name="brainExpBeta" value="2.0"/>

		<param name="lateArrival" value="-6"/>
		<param name="earlyDeparture" value="+10"/>
		<param name="performing" value="+2"/>
		<param name="traveling" value="-1"/>
		<param name="waiting" value="-0"/>

        <parameterset type="activityParams">
            <param name="activityType" value="h"/>
            <param name="typicalDuration" value="00:20:00"/>
            <param name="typicalDurationScoreComputation" value="relative"/>
            <param name="scoringThisActivityAtAll" value="true"/>

        </parameterset>

        <parameterset type="activityParams">
            <param name="activityType" value="truck charging interaction"/>
            <param name="typicalDuration" value="11:00:00"/>
			<param name="scoringThisActivityAtAll" value="false"/>
			<param name="typicalDurationScoreComputation" value="relative"/>
        </parameterset>

		<parameterset type="modeParams" >
			<param name="constant" value="-3.0" />
			<param name="marginalUtilityOfDistance_util_m" value="0.0" />
			<param name="marginalUtilityOfTraveling_util_hr" value="-3.0" />
			<param name="mode" value="truck" />
			<param name="monetaryDistanceRate" value="-1.0E-4" />
		</parameterset>

    </module>

	<module name="replanning">
		<param name="maxAgentPlanMemorySize" value="5"/>

		<param name="ModuleProbability_1" value="0.2"/>
		<param name="Module_1" value="ReRoute"/>

		<param name="ModuleProbability_2" value="0.8"/>
		<param name="Module_2" value="BestScore"/>
	</module>


	<module name="routing">

		<param name="networkModes" value="car,truck" />
		<param name="accessEgressType" value="accessEgressModeToLink"/>

	</module>

</config>
